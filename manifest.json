{
  "manifest_version": 3,
  "name": "Tweet Reply Helper",
  "version": "1.0.0",
  "description": "Adds a button to every Tweet reply field to fetch and use the original Tweet text.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://*.x.com/*"
      ],
      "js": ["dist/contentScript.bundle.js"],
      "run_at": "document_idle"
    }
  ]
}
